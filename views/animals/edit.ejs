<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <form action="/animals/<%= animal._id %>?_method=PUT" method="post">
          <fieldset>
            <legend>Edit a <%= animal.name %></legend>
            <label>
              NAME:<input
                type="text"
                name="name"
                value="<%= animal.name %>"
                placeholder="enter animal name"
              />
            </label>
            <label>
              REGION:<input
                type="text"
                name="region"
                value="<%= animal.region %>"
                placeholder="enter animal region"
              />
            </label>
            <label>
              EXTINCT:<input type="checkbox" name="EXTINCT" <%=
              animal.extinct ? "checked" : "" %> 
              />
            </label>
            <label>
              LIFE EXPECTANCY:<input
                type="number"
                name="expectancy"
                value="<%= animal.lifeExpectancy %>"
                placeholder="enter life expectancy"
                />
            </label>
          </fieldset>
          <input type="submit" value="Update <%= animal.name %>" />
        </form>
      </div>
    </main>
  </body>
</html>